<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main_yzs_new"
    android:orientation="vertical">

    <com.aries.template.utils.ScaleTextView
        android:id="@+id/jtjk_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="26dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="杭州市第一人民医院"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/bg_readcard_gray"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:background="#24A6A0"
                />

            <com.aries.template.utils.ScaleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="24dp"
                android:gravity="left"

                android:text="请输入手机号" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/icon_countdown_yzs">

            </TextView>

            <com.aries.template.utils.ScaleTextView
                android:id="@+id/jtjk_fz_fragment_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="119秒" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="576dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_readcard_white"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>


                    <com.aries.template.utils.ScaleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="15dp"
                        android:text="联系方式:"
                        android:textSize="22dp"
                        android:textColor="@color/xui_config_color_primary_text" />

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/my_edittext_style"
                        android:hint="@string/tip_please_input_phone_number"
                        android:inputType="number"
                        android:textSize="22dp"
                        android:maxLength="13"
                      />

                <com.aries.template.utils.ScaleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="22dp"
                    android:text="发送验证码:"
                    android:textColor="@color/xui_config_color_primary_text" />

                <FrameLayout
                    android:id="@+id/fl_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">



                    <!--            <com.aries.template.utils.ScaleTextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_gravity="start|center_vertical"-->
                    <!--                android:text="验证码" />-->

                    <EditText
                        android:id="@+id/et_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/my_edittext_style"
                        android:hint="@string/hint_please_input_verify_code"
                        android:inputType="number"
                        android:textSize="22dp"
                        android:maxLength="6"
                         />

<!--                    app:met_clearButton="false"-->
<!--                    app:met_errorMessage="@string/tip_verify_code_error"-->
<!--                    app:met_floatingLabel="normal"-->
<!--                    app:met_floatingLabelText="@string/lab_verify_code"-->
<!--                    app:met_maxCharacters="4"-->
<!--                    app:met_regexp="@string/regex_verify_code"-->

                    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                        android:id="@+id/btn_get_verify_code"
                        style="@style/RoundButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:gravity="center"
                        android:text="@string/action_get_verify_code"
                        android:textColor="@color/selector_round_button_main_theme_color"
                        android:textSize="22dp"

                        app:rb_borderColor="@color/xui_transparent"
                        app:rb_radius="15dp" />

                </FrameLayout>

                <com.aries.template.utils.ScaleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示：请输入正确的手机号"
                    android:textColor="#DCA63C"
                    android:textSize="22dp"
                    android:layout_marginTop="20dp"
                    />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/btn_next_yzs"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="20dp"
                    android:enabled="true"
                    android:textSize="24dp"
                    android:layout_gravity="start"
                    android:text="确认复诊" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_register_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="25dp"
                        android:button="@drawable/checkbox_theme"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                    <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                        android:id="@+id/tv_other_login"
                        style="@style/TextStyle.Explain"
                        android:layout_gravity="start"
                        android:paddingStart="16dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="22dp"
                        android:text="用户隐私政策"
                        android:textColor="@color/xui_config_color_primary_text" />



                    <!--            <com.xuexiang.xui.widget.button.roundbutton.RoundButton-->
                    <!--                android:id="@+id/tv_forget_password"-->
                    <!--                style="@style/RoundButton"-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_gravity="end"-->
                    <!--                android:paddingStart="10dp"-->
                    <!--                android:paddingTop="3dp"-->
                    <!--                android:paddingEnd="10dp"-->
                    <!--                android:paddingBottom="3dp"-->
                    <!--                android:text="@string/action_get_verify_code"-->
                    <!--                android:textColor="@color/selector_round_button_main_theme_color"-->
                    <!--                android:textSize="13sp"-->
                    <!--                app:rb_borderColor="@color/selector_round_button_main_theme_color"-->
                    <!--                app:rb_borderWidth="1.5dp"-->
                    <!--                app:rb_radius="15dp" />-->

                    <!--            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView-->
                    <!--                android:id="@+id/tv_forget_password"-->
                    <!--                style="@style/TextStyle.Explain"-->
                    <!--                android:layout_gravity="end"-->
                    <!--                android:paddingStart="10dp"-->
                    <!--                android:paddingTop="5dp"-->
                    <!--                android:paddingEnd="10dp"-->
                    <!--                android:paddingBottom="5dp"-->
                    <!--                android:text="忘记密码"-->
                    <!--                android:textColor="@color/xui_config_color_primary_text" />-->

                </LinearLayout>

                <!--            <com.xuexiang.xui.widget.textview.supertextview.SuperButton-->
                <!--                android:id="@+id/btn_login"-->
                <!--                style="@style/SuperButton.Primary.Login"-->
                <!--                android:layout_marginTop="16dp"-->
                <!--                android:text="1111" />-->



                <FrameLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <com.xuexiang.xui.widget.alpha.XUIAlphaTextView

                        style="@style/TextStyle.Explain"
                        android:layout_gravity="start"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:text="其他登录方式"
                        android:textColor="@color/xui_config_color_primary_text" />

                    <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                        android:id="@+id/tv_forget_password"
                        style="@style/TextStyle.Explain"
                        android:layout_gravity="end"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:text="忘记密码"
                        android:textColor="@color/xui_config_color_primary_text" />

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="600dp"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="540dp"
               android:background="@mipmap/bg_input_yzs"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"

                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >

                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/num_1"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:id="@+id/num_2"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:id="@+id/num_3"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >

                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:id="@+id/num_4"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:id="@+id/num_5"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:id="@+id/num_6"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >

                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:id="@+id/num_7"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:id="@+id/num_8"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:id="@+id/num_9"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"

                        android:orientation="horizontal"
                        >

                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_weight="1"
                            android:id="@+id/num_0"
                            android:textSize="30dp"
                            android:gravity="center"

                            android:textColor="@color/white"
                            android:background="@mipmap/bg_zero_yzs"
                            />

                        <com.aries.template.utils.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:visibility="gone"
                            android:id="@+id/num_point"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@mipmap/bg_num_yzs"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="-4dp"
                    android:paddingRight="10dp"

                    android:orientation="vertical"
                    >

                    <com.aries.template.utils.ScaleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="245dp"
                        android:text="清\n除"
                        android:id="@+id/btn_clear"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"

                        android:textColor="@color/white"
                        android:background="@mipmap/bg_clear_yzs"
                        />

                    <com.aries.template.utils.ScaleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="245dp"
                        android:text="退\n格"

                        android:id="@+id/btn_back_text"
                        android:textSize="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@mipmap/bg_clear_yzs"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:text="返回"
                android:textSize="24dp"
                android:textColor="#38ABA0"
                android:gravity="center"
                android:background="@mipmap/btn_back_yzs"
                />

            <Button
                android:id="@+id/btn_main"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:text="首页"
                android:textSize="24dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/btn_main_yzs"
                />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/jtjk_machine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="机器编号：583958794759"
            android:textColor="#fff" />


        <com.aries.template.utils.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="服务电话：96225"
            android:textColor="#333"
            android:visibility="gone" />

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="16dp"

            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="normal" />

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="16dp"

            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:textColor="#fff"
            android:layout_marginRight="80dp"
            android:textSize="16dp"
            android:textStyle="normal"
            />

    </LinearLayout>
</RelativeLayout>