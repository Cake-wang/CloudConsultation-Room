<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_main_yzs_new"
    android:orientation="vertical">

    <com.aries.template.utils.ScaleTextView
        android:id="@+id/jtjk_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="26dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="杭州市第一人民医院"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/bg_readcard_gray"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="5dp"
            android:layout_height="25dp"
            android:background="#24A6A0"
            />

        <com.aries.template.utils.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"
            android:gravity="left"

            android:text="请插入医保卡" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/icon_countdown_yzs">

        </TextView>

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/jtjk_fz_fragment_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="119秒" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="576dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_readcard_white"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_tp10"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="15dp"
            />

        <com.aries.template.utils.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="20dp"

            android:textSize="24dp"
            android:gravity="left"
            android:text="请插入医保卡" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="返回"
        android:textSize="24dp"

        android:textColor="#38ABA0"
        android:gravity="center"
        android:background="@mipmap/btn_back_yzs"
        />

        <Button
            android:id="@+id/btn_main"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="首页"
            android:textSize="24dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/btn_main_yzs"
            />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/jtjk_machine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="机器编号：583958794759"
            android:textColor="#fff" />


        <com.aries.template.utils.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="服务电话：96225"
            android:textColor="#333"
            android:visibility="gone" />

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="16dp"

            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="normal" />

        <com.aries.template.utils.ScaleTextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="16dp"

            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:textColor="#fff"
            android:layout_marginRight="80dp"
            android:textSize="16dp"
            android:textStyle="normal"
            />

    </LinearLayout>
</RelativeLayout>