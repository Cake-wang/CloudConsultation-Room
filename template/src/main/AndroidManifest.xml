<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aries.template">

    <!--<uses-feature android:name="android.hardware.screen.portrait"/>-->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:roundIcon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width_in_dp"
            android:value="1024"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="768"/>
<!--        <intent-filter>-->
<!--            <action android:name="com.garea.launcher.desktop" />-->
<!--        </intent-filter>-->
        <activity
            android:name=".SplashActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:screenOrientation="landscape"
            android:theme="@style/NormalSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="com.garea.launcher.desktop" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:screenOrientation="landscape"
            android:launchMode="singleTop" />
        <!-- 应用内浏览器 -->
        <activity
            android:name=".WebViewActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:label="@string/fast_loading" />
    </application>

</manifest>